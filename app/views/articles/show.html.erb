<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">

      <h1>
        <%= Kramdown::Document.new(@article.title).to_html.html_safe %>
        <%= link_to edit_article_path(@article) do %>
        <i class='fa fa-pencil'></i>
        <% end %>
        <%= link_to article_path(@article), method: :delete do %>
        <i class='fa fa-trash-o'></i>
        <% end %>
      </h1>
      <hr>
      <!-- <h2><%= @article.title %></h2> -->
      <img src="https://unsplash.it/800/300/?random">
      <h3><%= Kramdown::Document.new(@article.content).to_html.html_safe %></h3>
      <p><%= @article.created_at %></p>

      <p><%= link_to "Back to articles list", articles_path %></p>
    </div>
  </div>
</div>
